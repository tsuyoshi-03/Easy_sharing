<div class="comment-new-wrapper">
<div class="container" >
  <div class="row">
    <div class="mx-auto col-md-10 col-10 bg-white p-4" >
      <h1 class="text-center">Comment</h1>
        <%= form_for @comment do |f| %>
          <div class="form-group">
            <%= f.label :内容 %>
            <%= f.text_area :comment_content, size: '20x8', class: 'form-control' %>
          </div>
          <div class="mx-auto" style="width: 150px;">
            <%= f.hidden_field :topic_id, :value => @topic_id %>
            <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<footer class="text-muted py-4 mb-2">
  <div class="container">
    <%= link_to 'Back to top', '/topics', class: "float-right" %>
  </div>
</footer>