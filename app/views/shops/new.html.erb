<div class="container" >
  <div class="row">
    <div class="mx-auto col-md-8 col-10 bg-white p-5" >
      <h1 class="text-center">書店登録</h1>
        <%= form_for @shop do |f| %>
        <div class="form-group">
          <%= f.label :登録名, class: 'text-body' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :郵便番号, class: 'text-body' %>
          <%= f.text_field :postal_code, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :住所, class: 'text-body' %>
          <%= f.text_field :address, class: 'form-control' %>
        </div>
        <div class="mx-auto" style="width: 150px;">
          <%= f.submit "登録", class: 'btn-block btn-primary' %>
        </div>
        <% end %>
    </div>
  </div>
</div>  
    