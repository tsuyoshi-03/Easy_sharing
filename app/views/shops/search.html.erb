<div class="text-center py-2">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1 class="mb-2">Shops</h1>
        </div>
        <form class="form-inline d-flex justify-content-center mx-auto" >
        <div class="col-xs-4">
            <%= search_form_for(@q, url:shop_search_path) do |f| %>
              <%= f.search_field :name_cont, class:"form-control" , placeholder: "店名", :size => "30*30"  %>
        </div>      
              <%= f.submit class:"btn btn-primary" %>
            <% end %>
        </form>
      </div>  
    </div> 
  </div>

<div class="py-5">
    <div class="container">
      <div class="row">
        <% @shops.each do |shop| %>
        <div class="col-md-12">
          <div class="list-group" >
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= link_to shop.name, shop_path(id: shop.id) %>
              <%= link_to '削除', shop_path(id: shop.id),method: :delete ,data: { confirm: "書店「#{shop.name}」を削除します。よろしいですか？"}, class: "btn btn-danger" %>
            </li>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>