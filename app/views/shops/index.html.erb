<div class="py-5">
    <div class="container">
      <div class="row">
        <% @shops.each do |shop| %>
        <div class="col-md-12">
          <div class="list-group" >
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= link_to shop.name, edit_shop_path(id: shop.id) %>
              <%= link_to '削除', shop_path(id: shop.id),method: :delete ,data: { confirm: "書店「#{shop.name}」を削除します。よろしいですか？"}, class: "btn btn-danger" %>
            </li>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>