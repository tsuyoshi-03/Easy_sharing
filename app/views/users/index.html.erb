<div class="py-5">
    <div class="container">
      <div class="row">
        <% @users.each do |user| %>
        <div class="col-md-12">
          <div class="list-group" >
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= link_to user.name, user_path(id: user.id) %>
              <%= link_to '削除', user_path(id: user.id), method: :delete, data: { confirm: "ユーザー「#{user.name}」を削除します。よろしいですか？"}, class: "btn btn-danger" %>
            </li>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  
<footer class="text-muted py-4 mb-2">
  <div class="container">
    <%= link_to 'Back to top', '/topics', class: "float-right" %>
  </div>
</footer>