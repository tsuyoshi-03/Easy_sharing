<div class="user-new-wrapper">
<div class="container" >
  <div class="row">
    <div class="mx-auto col-md-6 col-10 bg-white p-5" >
      <h1 class="text-center">ユーザー登録</h1>
        <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :name, class: 'text-body' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email, class: 'text-body' %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, class: 'text-body' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, class: 'text-body' %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <div class="mx-auto" style="width: 150px;">
          <%= f.submit "登録", class: 'btn-block btn-primary' %>
        </div>  
        <% end %>
      </div>
    </div>
  </div>
</div>

<footer class="text-muted py-4 mb-2">
  <div class="container">
    <%= link_to 'Back to page', :back, class: "float-right" %>
  </div>
</footer>