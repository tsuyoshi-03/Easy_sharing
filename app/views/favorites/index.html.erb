<div class="text-center py-5">
    <div class="container">
      <div class="row my-2 justify-content-center">
        <div class="col-md-9">
          <h1>ブックマーク</h1>
        </div>
      </div>
    </div>
  </div>  
  
  <div class="py-4 bg-light">
    <div class="container">
      <div class="row flex-row">
        <% @favorite_topics.each do |topic| %>
        <div class="col-md-4 p-3">
          <div class="card box-shadow">
            <img class="card-img-top"><%= image_tag topic.image1.url  unless topic.image1.blank? %>
            <div class="card-body">
              <p class="font-weight-bold"><%= topic.user.name %></p>
              <p class="card-text"><%= topic.description %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View", topic %></button>
                </div> <small class="text-muted">9 mins</small>
              </div>
            </div>
          </div>
        </div>
     <% end %>
     </div>
    </div>
  </div>
</div>