<div class="topic-index-wrapper">
  <div class="container">
    <div class="row">
        <div class="col-md-12 col-md-offset-3">
          <div class="topic-index-single">
            <h3 class="topic-author">
              <% if @topic.user.image.url %>
                  <%= image_tag @topic.user.image.url, class:'icon_show' %>
                <% else %>
                  <%= image_tag "/assets/default_user_image.png", class:'icon_show' %>
                <% end %>
              <%= @topic.user.name %>
            </h3>
            <h3 class="topic-author">
              <%= @topic.shop.name %>
            </h3>
            <% if @topic.image.url %>
              <%=  link_to @topic.image.url, 'data-lightbox': @topic.image do %>
              <%= image_tag @topic.image.url, class:'topic_image' %>
              <% end %>
            <% else %>
              <%= image_tag "/assets/default_cover.png", class:'default_cover' %>
            <% end %>  
            <p class="topic-text">
              <%= simple_format(@topic.description) %>
            </p>
            
            <% if Favorite.find_by(user_id: @current_user.id, topic_id: @topic.id) %>
              <%= link_to("/favorites/#{@topic.id}/destroy", {method: "post"}) do %>
                <span class="fa fa-heart like-btn"></span>
              <% end %>
            <% else %>
              <%= link_to favorites_path(topic_id: @topic.id), method: :post do %>
              <%= image_tag 'heart-black.png', class: 'topic-index-icon' %><% end %>
            <% end %>  
            <%= link_to image_tag('comment.png', class: 'topic-index-icon'), new_comment_path(topic_id: @topic.id) %>
          </div>
        </div>
      </div>
        <% if current_user == @topic.user %>
          <%= link_to "編集", edit_topic_path %>
          <%= link_to "削除", topic_path,method: :delete %>
        <% end %>
        
        <h2>コメント</h2>
        <% @comments.each do |c| %>
          <div class="topic-index-single">
            <h2 class="topic-author"><%= @comment.user.name %></h2>  
            <%= c.comment_content %>
          </div>
        <% end %>

    </div>
  </div>
  