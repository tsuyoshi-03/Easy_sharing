  <div class="text-center py-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-12">
          <h1>投稿一覧</h1>
            <%= link_to("マイポスト", "/topics/mypost", {class: "btn btn-primary m-2"}) %>
            <%= link_to("ブックマーク", favorites_index_path, {class: "btn btn-secondary m-2"}) %>
            <%= search_form_for(@q, url:search_path) do |f| %>
              <%= f.search_field :shop_name_cont ,placeholder: "書店名", :size => "30*30"  %>
              <%= f.submit "検索" %>
            <% end %>
        </div> 
      </div> 
    </div>
  </div>  
  
  <div class="py-4 bg-light">
    <div class="container">
      <div class="row flex-row">
        <% @topics.each do |topic| %>
        <div class="col-md-4 p-3">
          <div class="card box-shadow">
            <img class="card-img-top">
            <% if topic.image1.url %>
              <%= image_tag topic.image1.url, class:'index_image' %>
            <% else %>
              <%= image_tag "/assets/default.png", class:'index_image' %>
            <% end %>
            <div class="card-body">
              <p class="font-weight-bold">
                <% if topic.user.image.url %>
                  <%= image_tag topic.user.image.url, class:'icon' %>
                <% else %>
                  <%= image_tag "/assets/default_user_image.png", class:'icon' %>
                <% end %>
                <%= topic.user.name %></p>
              <p class="font-weight-bold"><%= topic.shop.name %></p>
              <p class="card-text"><%= topic.description %></p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View", topic %></button>
                </div> <small class="text-muted">9 mins</small>
              </div>
            </div>
          </div>
        </div>
     <% end %>
     </div>
    </div>
  </div>
  <footer class="text-muted py-5">
    <div class="container">
      <%= link_to 'Back to top', '/topics', class: "float-right" %>
      <p>Album template is based on Bootstrap © examples.&nbsp; <br>New to Bootstrap? <a href="#">Visit the homepage</a> or read our <a href="#">getting started guide</a>.</p>
    </div>
  </footer>